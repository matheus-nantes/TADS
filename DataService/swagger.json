{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Weather API",
        "description": "API para coleta e listagem de dados climáticos"
    },
    "schemes": ["http"],
    "paths": {
        "/condicao": {
            "post": {
                "tags": ["CondicaoClimatica"],
                "summary": "Coletar dados de uma determinada localização",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Localização para coletar dados climáticos",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "latitude": {
                                    "type": "float",
                                    "example": -20.4435
                                },
                                "longitude": {
                                    "type": "float",
                                    "example": -54.6478
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Dados coletados com sucesso"
                    }
                }
            },
            "get": {
                "tags": ["CondicaoClimatica"],
                "summary": "Listar dados coletados com opção de paginação",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número da página",
                        "required": false,
                        "type": "integer",
                        "default": 1
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Número de itens por página",
                        "required": false,
                        "type": "integer",
                        "default": 10
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de dados coletados"
                    }
                }
            }
        },
        "/condicao/byTime": {
            "get": {
                "tags": ["CondicaoClimatica"],
                "summary": "Listar dados coletados de um determinado período percorrio, especificado por dias, com opção de paginação",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número da página",
                        "required": true,
                        "type": "integer",
                        "default": 1
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Número de itens por página",
                        "required": true,
                        "type": "integer",
                        "default": 10
                    },
                    {
                        "name": "days",
                        "in": "query",
                        "description": "Quantidade de dias no passado a serem considerados na pesquisa",
                        "required": true,
                        "type": "integer",
                        "default": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de dados coletados dentro do período especificado"
                    }
                }
            }
        },
        "/pesquisador": {
            "post": {
                "tags": ["Pesquisador"],
                "summary": "Pesquisador, quem emite um pedido de coleta de dados climáticos",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Informações do pesquisador",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "cpf": {
                                    "type": "String",
                                    "example": "123.456.789-11"
                                },
                                "nome": {
                                    "type": "String",
                                    "example": "Ciclano"
                                },
                                "genero": {
                                    "type": "String",
                                    "example": "Masculino"
                                },
                                "instituicao": {
                                    "type": "String",
                                    "example": "UFMS"
                                },
                                "dataDeNascimento": {
                                    "type": "Date",
                                    "example": "2024-06-10T12:30:45.678Z"
                                }

                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Dados coletados com sucesso"
                    }
                }
            },
            "get": {
                "tags": ["Pesquisador"],
                "summary": "Listar dados coletados com opção de paginação",
                "parameters": [
                ],
                "responses": {
                    "200": {
                        "description": "Lista de dados coletados"
                    }
                }
            }
        }
    }
}
