generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url=env("DATABASE_URL")
}

model Inscrito {
  id              Int       @id @default(autoincrement())
  nome            String
  email           String    @unique
  senha           String
  periodicidade   String    //semanal, quinzenal, mensal, semestral
  ultimoRecebido  String    @default("")//id do último relatório do tipo especificado que ele recebeu
  ativo           Boolean   @default(true)
  created_At DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Inscrito")
}

model Relatorio {
  id              Int @id @default(autoincrement())
  tipo            String
  titulo          String
  conteudo        String
  created_At DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Relatorio")
}
